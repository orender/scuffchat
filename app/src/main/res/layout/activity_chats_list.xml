<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@drawable/list_bg"
    tools:context=".ChatsList">

    <ListView
        android:id="@+id/listViewChats"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttonCreateChat"/>

    <Button
        app:backgroundTint="@null"
        android:id="@+id/LeaveChatList"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_leave_activity_button" />

    <Button
        android:id="@+id/buttonCreateChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_button_bg"
        android:text="Create New Chat"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:backgroundTint="@null" />

</RelativeLayout>