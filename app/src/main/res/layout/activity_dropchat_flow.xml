<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Countdown Timer -->
    <TextView
        android:id="@+id/countdownTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="10"
        android:textColor="@color/material_dynamic_neutral0"
        android:textSize="60sp"
        android:textStyle="bold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:background="@null"
        android:textAlignment="center" />

    <!-- Leave Chat Button -->
    <Button
        android:id="@+id/LeaveDropchatFlow"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_leave_activity_button"
        app:backgroundTint="@null"/>

    <!-- No Messages Text -->
    <TextView
        android:id="@+id/NoDropMessagesTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="There are no messages currently"
        android:textSize="18sp"
        android:visibility="gone" />

    <!-- Full Screen Image -->
    <ImageView
        android:id="@+id/fullscreenDropchatMessage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:visibility="gone" />

</RelativeLayout>