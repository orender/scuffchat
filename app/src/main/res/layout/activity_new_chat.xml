<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_background"
    tools:context=".NewChat">

    <Button
        app:backgroundTint="@null"
        android:id="@+id/LeaveNewChat"
        android:layout_width="47dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_leave_activity_button" />

    <LinearLayout
        android:id="@+id/chat_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="48dp"
        android:paddingBottom="32dp"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/editText_chat_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_edittext_bg"
            android:hint="Enter chat name"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/chat_edittext_stroke_color"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:drawableStart="@drawable/chat_logo"
            android:drawablePadding="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <Button
            android:id="@+id/button_create_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/chat_button_bg"
            android:text="Create Chat"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:backgroundTint="@null"/>

    </LinearLayout>

</RelativeLayout>